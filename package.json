{
  "name": "natours",
  "version": "1.0.0",
  "description": "Built using modern technologies: typescript, node.js, express, mongoDB, mongoose and more.",
  "main": "index.js",
  "targets": {
    "default": {
      "distDir": "./build/public/js/bundled/"
    }
  },
  "scripts": {
    "start:build": "tsc",
    "start:run:dev": "NODE_ENV=development node ./build/index.js",
    "start:run:prod": "NODE_ENV=production node ./build/index.js",
    "watch:js": "parcel serve ./build/public/js/index.js --dist-dir ./build/public/js/bundled/",
    "build:js": "parcel build ./build/public/js/index.js --dist-dir ./build/public/js/bundled/",
    "start": "tsc & concurrently 'npm run start:run:prod' 'npm run build:js'",
    "start:dev": "concurrently 'npm run start:build' 'npm run start:run:dev' 'npm run watch:js'",
    "deploy": "git add . & git commit -m heroku & git push heroku master"
  },
  "author": "Gustavo dos Anjos",
  "license": "ISC",
