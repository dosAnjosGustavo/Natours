{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "server.js",
  "targets": {
    "main": false
  },
  "scripts": {
    "start:build": "tsc -w & tscp -w",
    "start:run:dev": "NODE_ENV=development node server.js",
    "start:run:prod": "NODE_ENV=production node server.js",
    "watch:js": "parcel watch ./public/js/index.js --dist-dir ./public/js/bundled",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js/bundled",
    "start": "concurrently 'npm run start:build' 'npm run start:run:dev' 'npm run watch:js'",
    "start:prod": "concurrently 'npm run start:build' 'npm run start:run:prod' 'npm run build:js'"
  },
  "author": "Gustavo dos Anjos",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "concurrently": "^8.2.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.4.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "nodemailer-html-to-text": "^3.2.0",
    "nodemon": "^3.0.1",
    "pug": "^3.0.2",
    "sharp": "^0.32.5",
    "slugify": "^1.6.6",
    "stripe": "^13.4.0",
    "typescript": "^5.2.2",
    "validator": "^13.9.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-mongo-sanitize": "^2.1.0",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^9.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/nodemailer-html-to-text": "^3.1.0",
    "@types/pug": "^2.0.6",
    "@types/stripe": "^8.0.417",
    "@types/validator": "^13.7.17",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "https-browserify": "^1.0.0",
    "parcel": "^2.9.3",
    "process": "^0.11.10",
    "punycode": "^1.4.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
