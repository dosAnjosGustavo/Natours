    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/nodemailer-html-to-text": "^3.1.0",
