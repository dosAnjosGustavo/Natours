{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learning node, express and mongoDB",
  "main": "app.ts",
  "targets": {
    "main": false
  },
  "scripts": {
    "start": "nodemon server.ts",
    "start:prod": "NODE_ENV=production nodemon server.ts",
    "prod": "npm run start:prod",
    "debug": "ndb server.ts",
    "watch:js": "parcel serve ./public/js/index.js --dist-dir ./public/js/bundled",
    "build:js": "parcel build --no-hmr ./public/js/index.js --out-dir ./public/js --out-file bundle.js"
  },
  "author": "Gustavo dos Anjos",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@types/hpp": "^0.2.2",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.1",
    "mapbox-gl": "^3.0.0-beta.1",
    "mongoose": "^7.4.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "pug": "^3.0.2",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.1",
    "validator": "^13.9.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/express-mongo-sanitize": "^2.1.0",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.9",
    "@types/validator": "^13.7.17",
    "buffer": "^6.0.3",
    "parcel": "^2.9.3"
  }
}
